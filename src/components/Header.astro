---
import Navigation from '../components/Navigation.astro'
import Hamburger from '../components/Hamburger.astro'
---
<nav class="flex flex-row py-1 mt-9 gap-x-10 md:justify-center text-black md:text-inherit rounded-md z-10">
    <Hamburger />
    <Navigation />
</nav>

<style>
    nav{
        width: 100%;
        border-radius: 15px;
        background-color: rgb(99 102 241 / 0.7); 
        /* Fuerzo aqu√≠ el color del fondo que en el deploy se cambia con las clases de Tailwind */
    }
    @media screen and (min-width: 636px) {
        nav{
        height: 40px;
        }
    }
</style>