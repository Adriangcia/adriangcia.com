---
import BaseLayout from '../layouts/BaseLayout.astro'
import H1 from '../components/etiquetas/H1.astro'


const allPosts = await Astro.glob('../pages/posts/*.md');
allPosts.sort((a, b) => (Date.parse(b.frontmatter.pubDate)) - (Date.parse(a.frontmatter.pubDate)));
---
<BaseLayout 
	title="Adrián Gcía - UX Design Project Manager"
	description="UX Design Project Estrategic Management"
>
	<section class="container w-full mx-auto lg:w-[900px] mt-12 mb-5">
		<H1 class="text-center">
			Blog
		</H1>
		<h2>
			Aquí iré rescatando artículos que haya escrito en el pasado y nuevos pensamientos que vayan suergiendo.
		</h2>
	</section>
	<section class="container w-full mx-auto lg:w-[900px]">		
		<ul class="grid gap-4 md:grid-cols-2">
			{allPosts.map((post) =>			
				<li>
					<div class="max-w-sm bg-zinc-900 border border-zinc-900 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
							<a href={post.url}>
								<img
									src={post.frontmatter.imageFeatured.url}
									alt={post.frontmatter.imageFeatured.alt}  
									width='100%'
									class="rounded-lg"
								/> 
							</a>
						
						<div class="p-5 text-pretty projectcard">
							<a href={post.url}>
								<h5 class="mb-2 text-2xl font-bold tracking-tight text-lightgray dark:text-white">
									{post.frontmatter.title}
								</h5>
							</a>
							<p class="mb-3 font-normal text-lightgray dark:text-gray-400">{post.frontmatter.description}</p> 
							<a href={post.url} class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-indigo-500/60 rounded-lg hover:bg-indigo-700/60 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
								Leer más
								<svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
									<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
								</svg>
							</a>
						</div>
					</div>													            								
				</li>
			)}
		</ul>
	</section> 
</BaseLayout>

<style>
	.projectcard a{
		color:lightgray;
		text-decoration: none;
	}
</style>
